{
	"name": "lifecycle-viewer",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:coverage": "vitest run --coverage",
		"test:coverage:ui": "vitest --ui --coverage.enabled",
		"test:server": "vitest run --project server",
		"test:server:coverage": "vitest run --project server --coverage",
		"mcp-bridge": "node mcp-stdio-bridge.js",
		"mcp-bridge:uv": "node mcp-stdio-bridge.js --mcp-command='uv run -m lifecycle-mcp'"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@vitest/browser": "^3.2.3",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"mdsvex": "^0.12.3",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@types/d3": "^7.4.3",
		"@types/ws": "^8.18.1",
		"better-sqlite3": "^12.2.0",
		"cors": "^2.8.5",
		"d3": "^7.9.0",
		"express": "^5.1.0",
		"lucide-svelte": "^0.542.0",
		"tailwindcss": "^4.1.13",
		"ws": "^8.18.3"
	}
}
